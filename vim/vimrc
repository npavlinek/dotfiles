call plug#begin()
Plug 'ctrlpvim/ctrlp.vim'
Plug 'guns/vim-sexp', { 'for': 'clojure' }
Plug 'lifepillar/vim-colortemplate'
Plug 'tpope/vim-fireplace', { 'for': 'clojure' }
Plug 'tpope/vim-repeat'
Plug 'tpope/vim-sexp-mappings-for-regular-people', { 'for': 'clojure' }
call plug#end()

" Enable filetype support, supporting filetype-specific indentation, syntax highlighting and other
" goodies.
filetype plugin indent on

" Enable syntax highlighting, overriding current color settings with defaults.
syntax on

set autoindent
set autoread
set backspace=indent,eol,start
set completeopt=
set encoding=utf-8
set fileformats=unix,dos,mac
set hidden
set ignorecase
set incsearch
set laststatus=2
set lazyredraw
set listchars=tab:→\ ,space:·
set nojoinspaces
set nowrap
set ruler
set scrolloff=8
set shiftwidth=4
set shortmess+=I
set sidescrolloff=8
set smartcase
set splitbelow
set splitright
set tabstop=4
set textwidth=100
set virtualedit=all

if has('gui_running')
  set guioptions-=m
  set guioptions-=T
  set guioptions-=L
  set guioptions-=r

  if has('win32')
    set guifont=Consolas:h10
  else
    set guifont=Cascadia\ Mono\ 10
  endif
elseif has('win32')
  set termguicolors
endif

silent! colorscheme midnight

highlight ExtraWhitespace guibg=red
" @todo: I don't think this match is executing properly.
match ExtraWhitespace /\s\+$/

let g:mapleader = ' '

" Make <Esc> exit insert mode in vertical block mode.
inoremap <C-C> <Esc>

nnoremap <C-D> <C-D>zz
nnoremap <C-P> <Cmd>CtrlPMixed<CR>
nnoremap <C-U> <C-U>zz
nnoremap <Leader>p "*p
nnoremap <Leader>q <Cmd>set list!<CR>
nnoremap <Leader>y "*y
nnoremap N Nzz
nnoremap j gj
nnoremap k gk
nnoremap n nzz

vnoremap <Leader>p "*p
vnoremap <Leader>s :sort<CR>
vnoremap <Leader>y "*y
