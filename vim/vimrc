" Enable filetype support, supporting filetype-specific indentation, syntax
" highlighting and other goodies.
filetype plugin indent on

" Enable syntax highlighting, overriding current color settings with defaults.
syntax on

set autoindent
set autoread
set backspace=indent,eol,start
set completeopt=
set display=lastline
set encoding=utf-8
set fileformats=unix,dos,mac
set hidden
set ignorecase
set incsearch
set laststatus=2
set lazyredraw
set listchars=tab:>\ ,space:.
set nojoinspaces
set number
set ruler
set shortmess+=I
set smartcase
set splitbelow
set splitright
set statusline=%<%f\ %y[%{&fileencoding}][%{&fileformat}]\ %m%r%=%-14.(%l,%c%V%)\ %P

set expandtab
set shiftwidth=4
set softtabstop=4
set tabstop=8

if has("win32")
    set guicursor=a:block-Cursor
endif

let c_space_errors = 1
let c_syntax_for_h = 1
let g:mapleader = " "
let g:maplocalleader = "\\"
let g:omni_sql_no_default_maps = 1

color torte

" Make <Esc> exit insert mode in vertical block mode.
inoremap <C-C> <Esc>

nnoremap <C-D> <C-D>zz
nnoremap <C-U> <C-U>zz
nnoremap <Leader><Leader> <Cmd>nohlsearch<CR>
nnoremap <Leader>p "*p
nnoremap <Leader>q <Cmd>set list!<CR>
nnoremap <Leader>y "*y
nnoremap <Leader>z <Cmd>set spell!<CR>
nnoremap \\ <Cmd>Eval<CR>
nnoremap j gj
nnoremap k gk

vnoremap <F2> d:execute 'normal i' . join(sort(split(getreg('"'))), ' ')<CR>
vnoremap <Leader>p "*p
vnoremap <Leader>s :sort<CR>
vnoremap <Leader>y "*y

augroup my_startup
    autocmd!

    " Jump to the last known cursor position in a buffer. Taken from Vim's `defaults.vim`: "
    " https://github.com/vim/vim/blob/e978b4534a5e10471108259118c0ef791106fd92/runtime/defaults.vim#L111
    autocmd BufReadPost *
    \   let line = line("'\"")
    \ | if line >= 1 && line <= line("$") && &filetype !~# "commit" && index(["xxd", "gitrebase"], &filetype) == -1
    \ |     execute "normal! g`\""
    \ | endif
augroup end
